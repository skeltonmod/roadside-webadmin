generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum CarTransmission {
  Automatic
  Manual
}

model User {
  id           String      @id
  email        String      @unique
  username     String?
  key          Key[]
  auth_session Session[]
  details      UserDetail?
  cars         Cars[]
  shops        Shops[]
  email_verified Boolean @default(false)
  email_verification EmailVerification?

  // Add these fields for relations
  requestsAsUser     Request[] @relation("UserRequests")
  requestsAsMechanic Request[] @relation("MechanicRequests")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  reporter Reports[] @relation("Reporter")
  reportee Reports[] @relation("Reportee")

  @@map("users")
}

model Session {
  id             String @id
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  @@index([user_id])
  @@map("users_session")
}

model UserDetail {
  id      String  @id @default(uuid())
  role    String
  details Json
  approved Boolean @default(false)
  user_id String  @unique
  user    User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  image   String? @db.LongText
  location Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  @@map("user_details")
}

model Cars {
  id           String          @id @default(uuid())
  user_id      String 
  user         User            @relation(fields: [user_id], references: [id], onDelete: Cascade)
  brand        String
  model        String
  color        String
  year         String
  fuel         String
  transmission CarTransmission
  image        String?         @db.LongText
  request      Request[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  @@map("cars")
}

model Shops {
  id            String  @id @default(uuid())
  name          String
  location      Json?
  specialities  Json?
  address       String?
  permit_image  String? @db.LongText
  user_id       String
  user          User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  @@map("shops")
}

model Request {
  id             String   @id @default(uuid())
  car_id         String
  car            Cars     @relation(fields: [car_id], references: [id], onDelete: Cascade)
  mechanic_id    String
  user_id        String
  description    String?
  status         String   @default("pending")
  owner_rating   Int?   @default(0)
  mechanic_rating Int?  @default(0)
  amount    Float? @default(0)

  // Relationship to User model
  user         User @relation(name: "UserRequests", fields: [user_id], references: [id], onDelete: Cascade)
  mechanic     User @relation(name: "MechanicRequests", fields: [mechanic_id], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  @@map("requests")
}

model Reports{
  id String @id @default(uuid())
  reporter_id String
  reportee_id String

  reporter User @relation(name: "Reporter", fields: [reporter_id], references: [id], onDelete: Cascade)
  reportee User @relation(name: "Reportee", fields: [reportee_id], references: [id], onDelete: Cascade)

  description String? @db.LongText()
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  @@map("reports")
}

model EmailVerification {
  id String @id
  expires BigInt
  user_id String  @unique
  user    User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])

  @@map("email_verification_token")
}

model Key {
  id              String  @id
  hashed_password String?
  user_id         String
  user            User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("users_key")
}
